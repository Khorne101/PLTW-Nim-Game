public static displayMenu(int menu) {
        if (menu == 1) {
            System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            | >> 1 PLAYER                 |
            |    2 PLAYER                 |
            |                             |
            |                             |
            |-----------------------------|
            """
            );
        }
        if (menu == 2) {
            System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            | >> EASY                     |
            |    MEDIUM                   |
            |    HARD                     |
            |                             |
            |-----------------------------|
            """
            );
        }
    }
    public static updateMenu(int menu, int selection) {
        if (menu == 1) {
            for (int i = 0;i<9;i++) {
                System.out.print("\r");
            }
            if (selection == 1) {
                System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            | >> 1 PLAYER                 |
            |    2 PLAYER                 |
            |                             |
            |                             |
            |-----------------------------|
            """
            );
            }
            if (selection == 2) {
                System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            |    1 PLAYER                 |
            | >> 2 PLAYER                 |
            |                             |
            |                             |
            |-----------------------------|
            """
            );
            }
        }
        if (menu == 2) {
            for (int i = 0;i<9;i++) {
                System.out.print("\r");
            }
            if (selection == 1) {
                System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            | >> EASY                     |
            |    MEDIUM                   |
            |    HARD                     |
            |                             |
            |-----------------------------|
            """
            );
            }
            if (selection == 2) {
                System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            |    EASY                     |
            | >> MEDIUM                   |
            |    HARD                     |
            |                             |
            |-----------------------------|
            """
            );
            }
            if (selection == 3) {
                System.out.print("""
            |-----------------------------|
            |                             |
            |    Welcome to Nim!          |
            |                             |  
            |    EASY                     |
            |    MEDIUM                   |
            | >> HARD                     |
            |                             |
            |-----------------------------|
            """
            );
            }
        }


    }
